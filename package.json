{
	"name": "sveltekit-typescript-tailwindcss-sass-starter",
	"description": "Use TypeScript, TailwindCSS & Sass to quick start your new SvelteKit app!!",
	"version": "1.0.0",
	"author": {
		"name": "Mike van Peeren",
		"url": "https://github.com/MikevPeeren"
	},
	"license": "MIT",
	"keywords": [
		"tailwindcss",
		"svelte",
		"sveltekit",
		"svelte kit",
		"starter",
		"typescript",
		"prettier",
		"eslint",
		"sass",
		"react",
		"husky",
		"postcss",
		"sass",
		"svelte starter",
		"sveltekit starter",
		"svelte kit starter",
		"tailwindcss starter",
		"svelte tailwindcss starter",
		"sveltekit tailwindcss starter",
		"svelte kit tailwindcss starter",
		"svelte-tailwind-starter"
	],
	"repository": {
		"type": "git",
		"url": "git@github.com:MikevPeeren/sveltekit-typescript-tailwindcss-sass-starter.git"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepare": "husky install",
		"precommit": "lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,svelte}": [
			"eslint --fix"
		],
		"*.{html,js,ts,svelte}": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@playwright/test": "^1.48.2",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.7.4",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^6.21.0",
		"autoprefixer": "^10.4.20",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"postcss": "^8.4.47",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.7",
		"sass": "^1.80.6",
		"svelte": "^4.2.19",
		"svelte-check": "^3.8.6",
		"tailwindcss": "^3.4.14",
		"tslib": "^2.8.1",
		"typescript": "^5.6.3",
		"vite": "^5.4.10",
		"vitest": "^2.1.4"
	},
	"type": "module",
	"dependencies": {
		"@sveltejs/vite-plugin-svelte": "^3.1.2"
	}
}
